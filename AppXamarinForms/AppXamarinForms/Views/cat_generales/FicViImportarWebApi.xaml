<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarinForms.Views.cat_generales.FicViImportarWebApi">
    <ContentPage.Content>
        <ScrollView >
            <StackLayout Padding="10" Orientation="Vertical">
                <StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="LightGray">
                    <Label Text="{Binding FicTextAreaImpEdi}" FontAttributes="Bold"/>
                </StackLayout>
                <StackLayout Padding="10" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Center">
                    <Button Text="IMP. CATALOGO Edifici."  Command="{Binding FicMecImportEdi}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>